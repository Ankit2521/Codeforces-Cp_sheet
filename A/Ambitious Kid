#include <bits/stdc++.h>
using namespace std;

int main() {
    int t = 1;
    
    while (t--) {
        int n;
        cin >> n;
        vector<int> arr(n);
        
        for (int i = 0; i < n; i++) {
            cin >> arr[i];
        }
        int op =1e9;
        for (int i = 0; i < n; i++)
        {
        	op = min(op,abs(arr[i]-0));
        }
        cout<<op<<'\n';
    }
    
    return 0;
}
